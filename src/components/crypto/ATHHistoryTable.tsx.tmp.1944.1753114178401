'use client'

import { useState, useEffect } from 'react'
import { Table, TableHeader, TableBody, TableRow, TableHeaderCell, TableCell, LoadingTableState, EmptyTableState } from '@/components/ui/Table'
import { Badge } from '@/components/ui/Badge'
import { Button } from '@/components/ui/Button'
import { DateUtils, NumberUtils } from '@/lib/utils'

interface ATHRecord {
  id: string
  cryptoId: string
  symbol: string
  name: string
  newATH: number
  previousATH: number
  percentageIncrease: number
  athDate: string
  sentAt: string
  recipientCount: number
}

export function ATHHistoryTable() {
  const [athRecords, setATHRecords] = useState<ATHRecord[]>([])
  const [loading, setLoading] = useState(true)
  const [error, setError] = useState<string | null>(null)
  const [isDemoData, setIsDemoData] = useState(false)

  useEffect(() => {
    fetchATHHistory()
  }, [])

  const fetchATHHistory = async () => {
    try {
      setLoading(true)
      setError(null)
      const response = await fetch('/api/crypto/ath-history', {
        credentials: 'include', // Include cookies for authentication
        headers: {
          'Content-Type': 'application/json',
        },
      })
      
      if (!response.ok) {
        if (response.status === 401) {
          // Authentication required - redirect to login
          window.location.href = '/login'
          return
        }
        const errorData = await response.json()
        throw new Error(errorData.error || `HTTP ${response.status}: Failed to fetch ATH history`)
      }

      const data = await response.json()
      
      // Transform NotificationLog to ATHRecord format if needed
      const transformedRecords = (data.athRecords || data.data || []).map((record: any) => ({
        id: record.id,
        cryptoId: record.cryptoId,
        symbol: record.symbol || 'N/A',
        name: record.name || record.cryptoId,
        newATH: record.newATH || record.currentPrice || 0,
        previousATH: record.previousATH || 0,
        percentageIncrease: record.percentageIncrease || 0,
        athDate: record.athDate || record.createdAt || new Date().toISOString(),
        sentAt: record.sentAt || record.createdAt || new Date().toISOString(),
        recipientCount: record.recipientCount || 0,
      }))
      
      setATHRecords(transformedRecords)
    } catch (err) {
      setError(err instanceof Error ? err.message : 'Failed to load ATH history')
    } finally {
      setLoading(false)
    }
  }

  if (error) {
    return (
      <div className="text-center py-8">
        <div className="text-4xl mb-4">‚ùå</div>
        <p className="text-red-600 font-medium">{error}</p>
        <Button onClick={fetchATHHistory} className="mt-4" size="sm">
          Try Again
        </Button>
      </div>
    )
  }

  return (
    <div className="space-y-4">
      <div className="flex items-center justify-between">
        <p className="text-sm text-muted-foreground">
          Historical records of all detected all-time highs
        </p>
        <Button
          variant="secondary"
          size="sm"
          onClick={fetchATHHistory}
          disabled={loading}
        >
          üîÑ Refresh
        </Button>
      </div>

      <Table>
        <TableHeader>
          <TableRow>
            <TableHeaderCell>Cryptocurrency</TableHeaderCell>
            <TableHeaderCell>New ATH</TableHeaderCell>
            <TableHeaderCell>Previous ATH</TableHeaderCell>
            <TableHeaderCell>Increase</TableHeaderCell>
            <TableHeaderCell>ATH Date</TableHeaderCell>
            <TableHeaderCell>Notifications</TableHeaderCell>
          </TableRow>
        </TableHeader>
        <TableBody>
          {loading ? (
            <LoadingTableState rows={10} columns={6} />
          ) : athRecords.length === 0 ? (
            <EmptyTableState
              message="No ATH records found"
              description="New all-time highs will appear here when detected"
              action={
                <Button
                  onClick={fetchATHHistory}
                  className="btn-primary px-4 py-2 text-sm"
                >
                  Refresh Data
                </Button>
              }
            />
          ) : (
            athRecords.map((record) => (
              <TableRow key={record.id}>
                <TableCell>
                  <div>
                    <p className="font-medium">{record.name}</p>
                    <p className="text-sm text-muted-foreground uppercase">
                      {record.symbol}
                    </p>
                  </div>
                </TableCell>
                
                <TableCell>
                  <div className="flex items-center gap-2">
                    <span className="font-mono font-medium text-green-600">
                      ${NumberUtils.formatPrice(record.newATH)}
                    </span>
                    <Badge variant="ath" size="sm">
                      NEW ATH!
                    </Badge>
                  </div>
                </TableCell>
                
                <TableCell>
                  <span className="font-mono text-muted-foreground">
                    ${NumberUtils.formatPrice(record.previousATH)}
                  </span>
                </TableCell>
                
                <TableCell>
                  <span className="font-medium text-green-600">
                    +{record.percentageIncrease.toFixed(2)}%
                  </span>
                </TableCell>
                
                <TableCell>
                  <div className="text-sm">
                    <p className="font-medium">
                      {DateUtils.formatDateTime(record.athDate)}
                    </p>
                    <p className="text-muted-foreground">
                      {DateUtils.getRelativeTime(record.athDate)}
                    </p>
                  </div>
                </TableCell>
                
                <TableCell>
                  <div className="text-sm">
                    <p className="font-medium">{record.recipientCount} sent</p>
                    <p className="text-muted-foreground">
                      {DateUtils.getRelativeTime(record.sentAt)}
                    </p>
                  </div>
                </TableCell>
              </TableRow>
            ))
          )}
        </TableBody>
      </Table>

      {!loading && athRecords.length > 0 && (
        <div className="flex justify-between items-center text-sm text-muted-foreground pt-4">
          <span>
            Total ATH records: {athRecords.length}
          </span>
          <span>
            Last updated: {DateUtils.formatDateTime(new Date())}
          </span>
        </div>
      )}
    </div>
  )
}